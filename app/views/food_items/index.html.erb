<h1>Listing Biteables!</h1>

<table class="table">
	<tr>
		<th>Name</th>
		<th>Amount</th>
		<th>Description</th>
	</tr>

	<% @food_items.each do |food_item| %>
	<tr>
		<td><%= food_item.name %></td>
		<td><%= food_item.amount %></td>
		<td><%= food_item.description %></td>
		<td><%= link_to 'Show', food_item_path(food_item) %></td>
      	<td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
      	<td><%= link_to 'Delete', food_item_path(food_item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

